{
  "name": "node-fortune-api",
  "version": "1.0.0",
  "description": "Fortune API service using Express and SQLite",
  "main": "dist/index.js",  "scripts": {
    "start": "cross-env NODE_ENV=production npm run build && npm run migrate && npm run seed && node dist/index.js",
    "dev": "cross-env NODE_ENV=development npm run migrate && npm run seed && ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "setup-db": "ts-node src/setup-db.ts",
    "predev": "npm run setup-db"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.58.1",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.200.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.200.0",
    "@opentelemetry/sdk-node": "^0.200.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "knex": "^3.0.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
